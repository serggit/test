mixin o-header
  .o-header
    .container
      .o-header__top
        // TODO IMG
        img.o-header__logo(src="http://placehold.it/62x47")

        a.a-btn.a-btn--contour-danger.o-header__button(href="#")
          i.far.fa-gem
          span НАШИ КУРСЫ

        .o-header__personal
          .a-personal
            .a-personal__avatar
              img(src="http://placehold.it/36x36")
            .a-personal__label MATVEYAN
            .a-personal__arrow
              i.fas.fa-angle-down
            .a-personal__drop
              a.a-personal__drop-item(href="#")
                span.a-personal__drop-item-icon: .fal.fa-cog
                .a-personal__drop-item-text НАСТРОЙКИ

              a.a-personal__drop-item(href="#")
                span.a-personal__drop-item-icon: .fal.fa-envelope
                .a-personal__drop-item-text ЛИЧНЫЕ СООБЩЕНИЯ

              a.a-personal__drop-item(href="#")
                span.a-personal__drop-item-icon: .fal.fa-users
                .a-personal__drop-item-text ПОЛЬЗОВАТЕЛИ

              a.a-personal__drop-item(href="#")
                span.a-personal__drop-item-icon: .far.fa-chart-line
                .a-personal__drop-item-text УСТАНОВИТЬ ЦЕЛИ

              a.a-personal__drop-item(href="#")
                span.a-personal__drop-item-icon: .far.fa-power-off
                .a-personal__drop-item-text ВЫЙТИ





